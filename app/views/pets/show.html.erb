<div class="container">
  <h1>Meet <%= @pet.pet_name %></h1>

  <div class="card mb-4 shadow-lg rounded border-15">
    <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <%= image_tag @pet.pet_image, class: "img-fluid rounded" if @pet.pet_image.present? %>
        </div>
        <div class="col-md-8">
          <h2 class="card-title"><%= @pet.pet_name %></h2>
          <ul class="list-unstyled">
            <li><strong>Type:</strong> <%= @pet.pet_type %></li>
            <li><strong>Breed:</strong> <%= @pet.pet_breed %></li>
            <li><strong>Region:</strong> <%= @pet.pet_region %></li>
            <li class="mt-3"><%= @pet.pet_description %></li>
          </ul>
          <button id="show-booking-form" class="btn btn-success mt-3">Book Now</button>
        </div>
      </div>
    </div>
  </div>

<div id="booking-form" class="mt-4 p-4 border rounded shadow" style="display: none; background-color: #f9f9f9;">
  <h2 class="mb-4">Book with <%= @pet.pet_name %></h2>
  <%= simple_form_for [@pet, @booking], html: { class: "needs-validation" } do |f| %>
    <div class="mb-3">
      <%= f.input :booking_startdate, as: :date, label: "Start Date", required: true, input_html: { class: "form-control", placeholder: "Select a start date" } %>
    </div>
    <div class="mb-3">
      <%= f.input :booking_enddate, as: :date, label: "End Date", required: true, input_html: { class: "form-control", placeholder: "Select an end date" } %>
    </div>
    <div class="text-end">
      <%= f.button :submit, "Confirm Booking", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

<script>
  document.getElementById('show-booking-form').addEventListener('click', function() {
    var bookingForm = document.getElementById('booking-form');
    bookingForm.style.display = bookingForm.style.display === 'none' ? 'block' : 'none';
  });
</script>
