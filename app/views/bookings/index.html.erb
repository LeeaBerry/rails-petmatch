<div class="container mt-4" style="width: 1000px;">
  <h1 class="mb-4">These are your furry bookings</h1>

  <% if @bookings.any? %>
    <% @bookings.order(created_at: :desc).each do |booking| %>
      <div class="card mb-3 shadow-lg">
        <div class="row g-0">
          <!-- Pet Image -->
          <div class="col-md-4">
            <%= image_tag booking.pet.pet_image, class: "img-fluid rounded-start", alt: booking.pet.pet_name %>
          </div>
          <!-- Booking Information -->
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title"><%= booking.pet.pet_name %> (<%= booking.pet.pet_type %>)</h3>
              <p class="card-text">
                <strong>From:</strong> <%= booking.booking_startdate %><br>
                <strong>To:</strong> <%= booking.booking_enddate %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-muted">You have no bookings yet.</p>
  <% end %>
</div>
